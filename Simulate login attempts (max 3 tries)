#include <iostream>
using namespace std;

int main() {
    string correctpassword = "khulja";
    string password;
    int attempts = 0;

    while(attempts < 3) {
        cout << "Enter password: ";
        cin >> password;

        if(password == correctpassword) {
            cout << "====WELCOME====";
            return 0;
        }
        else {
            cout << "Wrong Password\n";
        }

        attempts++;
    }

    cout << "====ACCOUNT LOCKED====";
    return 0;
}
   
